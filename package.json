{
  "name": "kimochi-player",
  "version": "0.1.0",
  "description": "Framework-agnostic video player library with WebAssembly-powered thumbnail previews",
  "type": "module",
  "main": "./dist/kimochi-player.umd.js",
  "module": "./dist/kimochi-player.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/kimochi-player.es.js",
      "require": "./dist/kimochi-player.umd.js"
    },
    "./style.css": "./dist/kimochi-player.css",
    "./vue": {
      "import": "./dist/vue/KimochiPlayerVue.js",
      "types": "./dist/vue/KimochiPlayerVue.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build:all": "npm run build && npm run build:lib",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit"
  },
  "keywords": [
    "video",
    "player",
    "hls",
    "webassembly",
    "wasm",
    "ffmpeg",
    "thumbnails",
    "web-component"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "vue": "^3.5.13",
    "hls.js": "^1.5.17"
  },
  "peerDependencies": {
    "@ffmpeg/ffmpeg": "^0.12.0",
    "@ffmpeg/util": "^0.12.0"
  },
  "peerDependenciesMeta": {
    "@ffmpeg/ffmpeg": {
      "optional": true
    },
    "@ffmpeg/util": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "terser": "^5.27.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.0.0",
    "vue-tsc": "^2.2.0"
  }
}
