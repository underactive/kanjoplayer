{
  "name": "kanjoplayer-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w kanjo-player-demo",
    "dev:vue": "npm run dev -w kanjo-player-demo-vue",
    "dev:react": "npm run dev -w kanjo-player-demo-react",
    "dev:svelte": "npm run dev -w kanjo-player-demo-svelte",
    "build": "npm run build -w kanjo-player",
    "build:netlify": "bash scripts/build-netlify.sh",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "~5.6.2"
  }
}
